<h1>id = <%= @tasklist.id %> の詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @tasklist.id %></td>
  </tr>
  <tr>
    <th>コンテンツ</th>
    <td><%= @tasklist.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @tasklist.status %></td>
  </tr>
</table>


<%= link_to '編集する', edit_tasklist_path(@tasklist), class: 'btn btn-success' %>
<%= link_to '削除する', @tasklist, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger'  %>

