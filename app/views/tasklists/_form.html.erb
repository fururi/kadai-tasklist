<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-">
    
    <%= form_for(tasklist) do |f| %>
      <% if tasklist.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% tasklist.errors.full_messages.each do |tasklist| %>
              <li><%= tasklist %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <%= f.label :content, 'コンテンツ' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :status, 'ステータス' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>
    
      <%= f.submit '投稿', class: 'btn btn-warning' %>
    <% end %>
    
   </div>
   <!--/div-->
</div>
 
